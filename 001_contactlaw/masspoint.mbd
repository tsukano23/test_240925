#-----------------------------------------------------------------------
begin: data;
   problem: initial value;
end: data;
 
#-----------------------------------------------------------------------
 
begin: initial value;
   initial time:   0.;
   final time:     1.;
   time step:      1.e-3;
   max iterations: 10;
   tolerance:      1.e-6;
end: initial value;

#-----------------------------------------------------------------------

begin: control data;
    output frequency:    50;
    structural nodes:     1;
    rigid bodies:         1;
    loadable element:     2;
    gravity;
end: control data;

#-----------------------------------------------------------------------

#gravity
set: real g = 9.81;             #acceleration [m/s^2]

#-----------------------------------------------------------------------

# Design Variables
set: real M   = 1.; #[kg]  Mass of the ball

#-----------------------------------------------------------------------

#Lable
# Node Labels
set: integer Node_masspoint = 1;

# Body Labels
set: integer Body_masspoint = 11;

#-----------------------------------------------------------------------

#module-load
module load: "/usr/local/mbdyn/libexec/libmodule-seabed.la";
module load: "/usr/local/mbdyn/libexec/libmodule-contactlaw.la";

#-----------------------------------------------------------------------

begin: nodes;
   structural: Node_masspoint, dynamic,
        null,        # absolute position
        eye,         # absolute orientation
        null,        # absolute velocity
        null;        # absolute angular velocity
      
end: nodes;
 
begin: elements;
    body: Body_masspoint, Node_masspoint,
        M,      # mass
        null,   # relative center of mass
        eye;    # inertia matrix
    user defined: 21, seabed,
        100.,   #z_node(initial)
        -100.;  #z_seabed
    user defined: 22, contactlaw,
        1,
        21; 
    gravity:
      uniform, 0.0, 0.0, -1.0,
      const, g;
end: elements;